//                    maxlength: 255,
//                    required: true
//                },
//                "profile[city]": {
//                    maxlength: 255,
//                    required: true
//                },
                "profile[zip_code]": {
                    required: true,
                    number: true,
                    maxlength: 5,
                    minlength: 5
                },
                "holder_name": {
                    required: true,
                    maxlength: 255
                },
                "credit_card_number": {
                    required: true,
//                    number: true,
                    minlength: 16,
                    maxlength: 16
                },
                "cvv": {
                    required: true,
                    number: true,
                    minlength: 3,
                    maxlength: 4
                }
            }, messages: {
                credit_card_number: "Please enter 16 characters only"
            }
        });
    })
    function confirm_order() {
        if ($("#payment_form").valid() == true) {
            $(".background_shadow").show();
            $("#payment_form").ajaxSubmit({
                url: '/jobs/billing_info',
                success: function (data) {
                    if (data.success) {
                        $(".background_shadow").hide();
                        alert(data.message)
                    }
                    else {
                        $("#container").html(data)
                        $(".background_shadow").hide();
                    }
                    window.scroll(0, 0)
                }
            });
        }
    }
    $('#input').change(function() {
//        alert($(this).val())
        $(this).val($(this).val().replace(/\s/g,""));
    });

</script>
