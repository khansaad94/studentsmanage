<body class="page-header-fixed page-quick-sidebar-over-content ">
<div class="page-content-wrapper">
  <div class="page-content" style="min-height:1215px">
    <div class="row">
      <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h3 class="page-title">
          Reply Email
        </h3>
        <ul class="page-breadcrumb breadcrumb">
          <li>
            <i class="fa fa-home"></i>
            <a href="/admin/contact_mailer_information">Contacts emails</a>
            <i class="fa fa-angle-right"></i>
          </li>
          <li>
            <a href="/admin/contact_mailer_information">Contacts emails</a>
          </li>
          <li class="pull-right">
            <div data-original-title="Change dashboard date range" data-placement="top" class="dashboard-date-range tooltips" id="dashboard-report-range">
              <i class="icon-calendar"></i>
              <span></span>
              <i class="fa fa-angle-down"></i>
            </div>
          </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
      </div>
    </div>
    <!-- END PAGE HEADER-->

    <div class="row">
      <div class="col-md-6 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet box blue">
          <div class="portlet-title">
            <div style="float: left">Reply Email</div>
            <div class="tools">
            </div>
          </div>
          <div class="portlet-body form">
            <%= form_for(@contact_mailer, :url => {:controller => "admin/contact_mailer_information", :action => "reply_email"}, :method => "post") do |f| %>
                <div class="form-body form-horizontal">

                <div class="row" id="errors"></div>
                  <%= hidden_field_tag "contact_id", @contact_mailer.id %>
                  <div class="form-group">
                    <div class="col-md-12">
                    <label>Email</label>

                    <div class="col-md-12">
                      <%= text_field_tag :email,@contact_mailer.email.present? ? @contact_mailer.email : "", :class => "form-control", :placeholder => "Name" ,:readonly => true%>
                    </div>
                  </div>
                  </div>

                  <div class="form-group">
                    <div class="col-md-12">
                    <label>Message</label>

                    <div class="col-md-12">
                      <!--<textarea rows="10" id="reply_message" style="width: 442px"></textarea>-->
                      <%= text_area_tag "reply_message", nil,:placeholder => "Enter your text here. . ."%>
                    </div>
                  </div>
                  </div>



                </div>

                <div class="form-actions">
                  <div class="z_100" id="save-btn">
                    <!--<a class="btn blue" href="javascript:void(0)">Save</a>-->
                  </div>
                  <!--<button class="btn blue" type="submit">Update</button>-->
                  <%= f.submit "Send Email", :class => "btn blue" %>
                </div>
            <% end %>
          </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->

      </div>
    </div>

    <div class="clearfix">
    </div>

  </div>

</div>
</div>
</body>
