            </div>
            <div class="tools">
              <a class="collapse" href="javascript:;">
              </a>
              <a class="config" data-toggle="modal" href="#portlet-config">
              </a>
              <a class="reload" href="javascript:;">
              </a>
              <a class="remove" href="javascript:;">
              </a>
            </div>
          </div>
          <div class="portlet-body">
            <%= form_for(@event_type, :url => {:controller => "admin/event_types", :action => "update"}, :html => {:multipart => true, :id => "edit_event_type"}) do |f| %>
                <%#= form_for(@user, :url => "/admin/users/update_user",:method => "post", :id => "edit_user_form") do |f| %>
                <%= f.hidden_field :id, :value => @event_type.id %>
                <div class="clearfix">
                  <label>Name:</label>
                  <%= f.text_field :name, :autofocus => true, :class => "form-control", :placeholder => "Name" %>
                  <%#= f.text_field :first_name, :placeholder => "Your First Name", :class => "form-control placeholder-no-fix" %>
                </div>

                <div class="clearfix">
                  <p></p>
                </div>

                <div class="clearfix">
                  <%= f.submit "Update", :class => "btn green pull-left" %>
                </div>
            <% end %>

          </div>
        </div>
      </div>
    </div>

  </div>
</div>
</body>
<style>
    body {
        color: #000000
