<body class="page-header-fixed page-quick-sidebar-over-content ">
<div class="page-content-wrapper">
  <div class="page-content" style="min-height:1215px">
    <div class="row">
      <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h3 class="page-title">
          Charity Accounts Payments
        </h3>
        <ul class="page-breadcrumb breadcrumb">
          <li>
            <i class="fa fa-home"></i>
            <a href="/admin/charity_accounts/payment-index">Charity Payments</a>
            <i class="fa fa-angle-right"></i>
          </li>
          <li>
            <i class="fa fa-home"></i>
            <a href="/admin/charity_accounts/payment-index">Display all Charity Payments</a>
            <i class="fa fa-angle-right"></i>
          </li>
          <li>
            <a href="/admin/charity_accounts/new-payment">Create Charity Payment</a>
          </li>
          <li class="pull-right">
            <div data-original-title="Change dashboard date range" data-placement="top" class="dashboard-date-range tooltips" id="dashboard-report-range">
              <i class="icon-calendar"></i>
              <span></span>
              <i class="fa fa-angle-down"></i>
            </div>
          </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
      </div>
    </div>
    <!-- END PAGE HEADER-->

    <div class="row">
      <div class="col-md-6 ">
        <!-- BEGIN SAMPLE FORM PORTLET-->
        <div class="portlet box blue">
          <div class="portlet-title">
            <div class="caption">
              <i class="fa fa-gift"></i> Create Celebrity Charity Account
            </div>
            <div class="tools">
              <a class="collapse" href="">
              </a>

            </div>
          </div>
          <div class="portlet-body form">
            <%= form_for(@c_account, :url => {:controller => "admin/charity_accounts", :action => "celebrity_charity_accounts"}, :method => "post") do |f| %>
                <div class="form-body">
                  <div class="row" id="errors"></div>
                  <br>

                  <div class="clearfix">
                    <label>Celebrity:</label>
                    <br>
                    <%= f.select :celebrity_id, options_for_select(@celb.map{|k,v| [k.to_s,v]}) %>
                  </div>
                  <br>

                  <div class="clearfix">
                    <label>Charity Percentage:</label>
                    <%= f.text_field :charity_percentage, :autofocus => true, :class => "form-control placeholder-no-fix", :placeholder => "Name" %>
                  </div>
                  <br>

                  <div class="clearfix">
                    <label>Charity Account:</label>
                    <br>
                    <%= f.collection_select(:charity_account_id, CharityAccount.all, :id, :name) %>
                  </div>

                </div>
                <div class="form-actions">
                  <div class="z_100" id="save-btn">
                    <!--<a class="btn blue" href="javascript:void(0)">Save</a>-->
                    <%= f.submit "Save", :class => "btn blue" %>
                  </div>
                  <!--<button class="btn blue" type="submit">Update</button>-->

                </div>
            <% end %>
          </div>
        </div>
        <!-- END SAMPLE FORM PORTLET-->

      </div>
    </div>

    <div class="clearfix">
    </div>

  </div>

</div>
</div>
</body>
