<body class="page-header-fixed page-quick-sidebar-over-content ">
<div class="page-content-wrapper">
  <div class="page-content" style="min-height:1215px">

    <div class="row">
      <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h3 class="page-title">
          User
        </h3>
        <ul class="page-breadcrumb breadcrumb">
          <li>
            <i class="fa fa-home"></i>
            <a href="/admin/users/all_users">Job</a>
            <i class="fa fa-angle-right"></i>
          </li>
          <li>
            <a href="/admin/users/new">Upload Video</a>
          </li>
          <li class="pull-right">
            <div data-original-title="Change dashboard date range" data-placement="top" class="dashboard-date-range tooltips" id="dashboard-report-range">
              <i class="icon-calendar"></i>
              <span></span>
              <i class="fa fa-angle-down"></i>
            </div>
          </li>
        </ul>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">

        <div class="portlet box grey-cascade">
          <div class="portlet-title">
            <div class="caption">
              <i class="fa fa-comments"></i>Upload Video
            </div>
            <div class="tools">
              <a class="collapse" href="javascript:;">
              </a>
              <!--<a class="config" data-toggle="modal" href="#portlet-config">-->
              <!--</a>-->
              <!--<a class="reload" href="javascript:;">-->
              <!--</a>-->
              <!--<a class="remove" href="javascript:;">-->
              <!--</a>-->
            </div>
          </div>
          <div class="portlet-body">
            <%= form_for(@job, :url => "/admin/jobs/#{@job.id}", :html => {:id => "upload_video_form"}) do |f| %>
                <div class="clearfix">
                  <label>Job Created by</label>
                  <input type="text" value="<%= @job.user.first_name + ' ' + @job.user.last_name %>" class="form-control placeholder-no-fix" readonly="true"/>
                </div>
                <div class="clearfix">
                  <label>Celebrity Name</label>
                  <input type="text" value="<%= @job.celebrity.user.first_name + ' ' + @job.celebrity.user.last_name %>" class="form-control placeholder-no-fix" readonly="true"/>
                </div>
                <div class=" clearfix">
                  <label>Message for</label>
                  <input type="text" value="<%= @job.message_for %>" class="form-control placeholder-no-fix" readonly="true"/>
                </div>
                <div class="clearfix">
                  <label>Profile Picture:</label>

                  <div style="padding: 2px;">
                    <%= f.file_field :video %>
                  </div>
                </div>
                <div class="clearfix" style="margin:20px 0px 0px 0px">
                  <%= button_tag "Upload Video", :class => "btn green pull-left", :onclick => "abc()" %>
                  <%#= f.submit "Upload Video", :class => "btn green pull-left", :onclick => "abc()" %>
                </div>
                </div>
            <% end %>
            </div>
      </div>
    </div>
  </div>
</div>
<script>
    function abc() {
        $(".background_shadow").show()
        $("#upload_video_form").submit()
    }
</script>
</body>