    function cart() {
        $(".background_shadow").hide();
        $("#menuZ").hide();
        $.ajax({
            url: '/celeberties/cart',
            success: function (data) {
                if (data.success) {
                    window.location.href = data.message;
                    $(".background_shadow").hide();
                    $("#menuZ").hide();
                }
                else {
                    $("#container").html(data)
                    $("#head_div").addClass('bg-image');
                    $(".background_shadow").hide();
                }
            }
        });
    }

</script>