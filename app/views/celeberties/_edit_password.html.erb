<div class="warrper">
  <div class="white-cotaner">
    <div class="inner-con">
      <div class="form-container">
        <div class="your-pro-h">Change Password</div>
        <div class="sginup-con">
          <div class="logo-con login-pading"><a href="/"><img src="/assets/logo-signup23.png" alt=""></a></div>
          <div class="w-100">
            <%= form_for @user, :url => "/celeberities/update_password", :html => {:id => "passwor_form"} do |f| %>
                <div class="signup-form-box change-label-new">
                  <label>Old Password</label>
                  <%= password_field_tag :old_password %>
                </div>
                <div class="signup-form-box change-label-new">
                  <label>New Password</label>
                  <%= password_field_tag :new_password %>
                </div>
                <div class="signup-form-box change-label-new">
                  <label>Confirm New Password</label>
                  <%= password_field_tag :confirm_password %>
                </div>
                <%= hidden_field_tag :user_id, @user.id %>

                <div class="change-btn-new">
                  <input type="button" value="Save Password" onclick="save_password()">
                </div>

            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

