<script>
    $(document).ready(function () {
        $("#passwor_form").validate({
            rules: {
                "old_password": {
                    required: true,
                    minlength: 8,
                    maxlength: 255
                },
                "new_password": {
                    required: true,
                    minlength: 8,
                    maxlength: 255
                },
                "confirm_password": {
                    required: true,
                    minlength: 8,
                    maxlength: 255,
                    equalTo: "#new_password"
                }

            }
        })
    });

    function save_password() {
        if ($("#passwor_form").valid() == true) {
            $("#passwor_form").ajaxSubmit({
                url: '/celeberties/update_pass',
                success: function (data) {
                    if (data.success) {
                        alert(data.message)
                    }
                    else {
//                        hud message that password updated successfully
//                        $("#container").html(data)
                        window.location.href = "/my-account"
                    }
                }
            });
        }
    }
</script>